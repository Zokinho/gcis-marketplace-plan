# ── Clerk ──
CLERK_SECRET_KEY=sk_live_xxx
VITE_CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# ── Zoho CRM (zohocloud.ca — Canada region) ──
ZOHO_CLIENT_ID=1000.xxx
ZOHO_CLIENT_SECRET=xxx
ZOHO_REFRESH_TOKEN=1000.xxx
ZOHO_ACCOUNTS_URL=https://accounts.zohocloud.ca
ZOHO_API_URL=https://www.zohoapis.ca/crm/v7

# ── Database ──
DATABASE_URL=postgresql://gcis:gcis_dev_pass@localhost:5434/gcis_marketplace

# ── Zoho Feature Flags ──
ZOHO_DEALS_ENABLED=false

# ── Zoho Webhook Secret (set in Zoho workflow notification header: x-zoho-webhook-secret) ──
ZOHO_WEBHOOK_SECRET=

# ── DigitalOcean Spaces (S3-compatible) ──
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_REGION=nyc3
S3_BUCKET=harvex-uploads
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_PRESIGN_EXPIRES=3600

# ── SSL / HTTPS ──
SSL_DOMAIN=marketplace.harvex.ca
SSL_EMAIL=admin@harvex.ca
FORCE_HTTPS=false

# ── Monitoring ──
SENTRY_DSN=
VITE_SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_METRICS=true

# ── Marketplace Visibility ──
# true = follows Zoho Product_Active (go-live), false = independent (testing)
MARKETPLACE_COUPLED=true

# ── CSP ──
# Extra connect-src domains (comma-separated) for Content-Security-Policy
CSP_EXTRA_CONNECT_SRC=

# ── App ──
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173
